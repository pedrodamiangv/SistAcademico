  <fieldset>
    <legend>
      Log de Auditoria
    </legend>
    <%= form_tag :action => 'index', :controller => 'auditorias', :method => :post do%>
    <% end %>
  </fieldset>
  <div class="row" align="right">
      Buscar:<input type="text" id="kwd_search" value="" class="span3 seguido search-query"/> 
  </div>

<div class="row">
  <table id="my-table" class="table table-bordered">
      <thead class="table-title">  
      <tr>
        <th>Fecha</th>
        <th>Nivel</th>
        <th>Log</th>
      </tr>
    </thead>
    <tbody>
      <% @auditorias.each_with_index do |array, i| %>
        <% id = "page-" + i.to_s %>
          <tr>
            <% @objects.each do |array| %>
              <td class="selection <%= id %>"><td>  <%= array[1] %> </td>
              <td class="selection <%= id %>"><td>  <%= array[2] %>  </td>
              <td class="selection <%= id %>"><td>  <%= array[3] %>  </td>
          </tr>
            <% end %>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <% if @auditorias.size > 9 %>
    <div id="selector"></div>
<% end %>
</div>

<script type="text/javascript">
    $(document).ready(function(){
      test(0);
    });
    $('#selector').pagination({
        items: <%= @auditorias.size %>,
        itemsOnPage: 10,
        cssStyle: 'light-theme',
        onPageClick: function(pageNumber){test(((pageNumber-1)*10))}
    });
</script>