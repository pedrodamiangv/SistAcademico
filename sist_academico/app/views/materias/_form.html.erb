<%= form_for(@materia) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
<div class="container">
  <div class="row">
  <div id="registro">
        <fieldset>
              <div class="span3 offset4">
                <%= f.label :materia %>
                <%= f.text_field :materia, :maxlength => 30 %>
                <%= f.label :area %>
                <%= f.select( :area, ['Lenguas y sus Tecnolog.', 'MatemÃ¡tica y sus Tecnolog.', 'Ciencias Naturales', 'Ciencias Sociales', 'Artes y sus Tecnolog.', 'Plan Especifico', 'Plan Optativo'])%>
                <%= f.label :curso_id %>
                <%= f.collection_select :curso_id ,@cursos,:id,:curso_grado %>
                <%= f.label :docente_id %>
                <%= f.select :docente_id,  @docentes.map {|d| [d.user.nombre + ' ' + d.user.apellido  ,d.id] }  %>
                <%= f.submit "Guardar", class: "btn btn-large btn-primary" %>
                <%= link_to "Cancelar", :back, class: "btn btn-large btn-inverse" %>
              </div>
            <% end %>
        </fieldset>
  </div>
</div>
</div>
