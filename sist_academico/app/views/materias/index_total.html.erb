<div class="container">
  <div class="row">
    <legend>Lista de Materias</legend>
    <div class="row" align="right">
      Buscar:<input type="text" id="kwd_search" value="" class="span3 seguido search-query"/> 
    </div>
    <div class="row">
      <table id="my-table" class="table table-bordered">
        <thead class="table-title">
          <tr>
            <th>Materia</th>
            <th>Area</th>
            <th>Curso</th>
            <th>Docente</th>
            <th>AÃ±o</th>
            <% if current_user.is_administrativo %>
              <th></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% @materias.each_with_index do |materia, i| %>
          <% id = "page-" + i.to_s %>
            <tr>
              <td class="selection <%= id %>"><%= link_to materia.materia, materia %></td>
              <td class="selection <%= id %>"><%= materia.area %></td>
              <td class="selection <%= id %>"><%= materia.curso_curso %></td>
              <td class="selection <%= id %>"><%= materia.docente.full_name %></td>
              <td class="selection <%= id %>"><%= materia.created_at.to_s.slice(0,4); %></td>
              <% if current_user.is_administrativo %>
                <td class="selection <%= id %>"><%= link_to 'Editar', edit_materia_path(materia) %>
                <%= link_to 'Eliminar', materia, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
              <% end %>  
            </tr>
          <% end %>
        </tbody>
      </table>
      <% if @materias.size > 9 %>
        <div id="selector"></div>
      <% end %>
      <div align="center" id="vinculos">
        <% if current_user.is_administrativo %>
          <i class="icon-arrow-left"></i><%= link_to 'Volver', materias_path %>
          <i class="icon-file"></i><%= link_to 'Ver Lista como pdf', index_total_materias_path(format: 'pdf') %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
    $(document).ready(function(){
      test(0);
    });
    $('#selector').pagination({
        items: <%= @materias.size %>,
        itemsOnPage: 10,
        cssStyle: 'light-theme',
        onPageClick: function(pageNumber){test(((pageNumber-1)*10))}
    });
</script>