<div class="modal-header">  
    <a class="close" data-dismiss="modal">Ã—</a>  
    <h3>Registrar Direccion</h3>  
  </div>  
  <div class="modal-body">  
    <p id="error" class="error"></p>
    <%= form_for direccion, remote: true do |f| %>
    <%= f.text_field :tipo, value: 'administrativos', style: 'display: none;'  %>
    <%= f.label :direccion %><br />
    <%= f.text_field :direccion, :maxlength => 100, class: "span4", :onkeypress => "return validarText(event,this)" %>
    <%= f.label :barrio %><br />
    <%= f.text_field :barrio, :maxlength => 50, class: "span4", :onkeypress => "return validarText(event,this)" %>
    <%= f.label :city, "Ciudad" %>
    <%= f.collection_select :city_id ,@cities,:id,:city %>
  </div>  
  <div class="modal-footer"> 
    <%= f.submit "Guardar", :class => 'btn btn-success' %> 
    <a href="#" class="btn" data-dismiss="modal">Cerrar</a>  
  </div>  
      <% end %>