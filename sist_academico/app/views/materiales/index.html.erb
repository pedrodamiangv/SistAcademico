<div class="container">
  <div class="row">
    <legend>Lista de Materiales</legend>
    <div class="row" align="right">
      Buscar:<input type="text" id="kwd_search" value="" class="span3 seguido search-query"/> 
    </div>
    <div class="row">
      <table id="my-table" class="table table-bordered">
        <thead class="table-title">
          <tr>
            <th>Material</th>
            <th>Materia</th>
            <th>Curso</th>
            <th>Fecha</th>
            <% if current_user.is_administrativo %>
              <th></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% @materiales.each do |material| %>
            <tr>
              <td><%= link_to material.nombre_material, :action => 'download_file', :id => material.id, :controller => 'materiales'  %></td>
              <td><%= material.materia_materia %></td>
              <td><%= material.materia.curso_curso %></td>
              <td><%= material.created_at.to_s.slice(0,10); %></td>
              <% if current_user.is_administrativo %>
                <td><%= link_to 'Eliminar', material, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
              <% end %>  
            </tr>
          <% end %>
        </tbody>
      </table>
      <div align="center" id="vinculos">
        <% if current_user.is_administrativo %>
          <i class="icon-arrow-left"></i><%= link_to 'Volver a lista de Materias', materias_path%>
        <% end %>
      </div>
    </div>
  </div>
</div>
