			<label class="label-info"> No se ha cargado estas calificaciones aun! </label>

	<div align="center" id="vinculos">
	  <i class="icon-arrow-left"></i><%= link_to 'Volver ', alumno_path %>
	  <i class="icon-file"></i><%= link_to 'Boletin de calificaciones en pdf', alumno_calificaciones_alumno_path( format: 'pdf') %>
	</div>
		<% end %>
</div>